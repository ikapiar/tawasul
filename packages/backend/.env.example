# Database
POSTGRESQL_URI=postgresql://postgres:mysecretpassword@localhost/postgres

# Google OAuth (Required)
# Get these from Google Cloud Console
GOOGLE_OAUTH_CLIENT_ID=ganti
GOOGLE_OAUTH_CLIENT_SECRET=ganti
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:3000/api/v1/auth/callback/google

# JWT Keys (Required)
# See README for generation instructions (ES512 Base64)
JWT_PRIVATE_KEY_BASE64=error
JWT_PUBLIC_KEY_BASE64=error

# Symmetric Encryption (Recommended to change)
SYMMETRIC_ENCRYPTION_KEY_SECRET=RANDOM_32_BYTES_ASCII_CHARACTERS
SYMMETRIC_ENCRYPTION_KEY_IV=RANDOM_16_BYTES_

# Security
UNIVERSAL_TOKEN=adalah_token
OAUTH_CSRF_PARAM_VALUE=tawasul

# App URLs
FRONTEND_BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:3000

# Telemetry (Optional)
# SENTRY_DSN=
SENTRY_ENVIRONMENT=development
